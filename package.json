{
  "name": "monorepo",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "description": "Monorepo con Turborepo: Astro (docs), React.js (frontend) y Fastify (backend).",
  "engines": {
    "node": "22"
  },
  "workspaces": [
    "docs",
    "frontend",
    "backend",
    "lib"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "devs": "npm run prismaInit && npm run dev",
    "build": "npm run sync:env && turbo run build --filter=backend --filter=frontend --filter=docs",
    "start": "turbo run start",
    "docs": "npm run dev -w docs",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "-----server-----": "-----------------------------------------",
    "prismaInit": "cd backend && npm run prismaInit",
    "prismaReset": "cd backend && npx prisma migrate reset",
    "prismaMigrate": "cd backend && npx prisma migrate",
    "prismaMigrateOnly": "cd backend && npx prisma migrate --create-only",
    "prismaGenerate": "cd backend && npx prisma generate",
    "-----lib-----": "-----------------------------------------",
    "publicar": "cd lib && npm run publicar",
    "-----Global-----": "-----------------------------------------",
    "clean:install": "node ./global/clean.js && npm install",
    "sync:global": "node ./global/syncToModules.js",
    "sync:env": "node ./global/envPropagation.js",
    "enumGenerar": "cd backend && npm run enumGenerar && cd.. && npm run sync:global"
  },
  "dependencies": {
    "turbo": "^2.7.2"
  },
  "packageManager": "npm@10.9.4"
}