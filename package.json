{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo con Turborepo: Astro (docs), React.js (frontend) y Fastify (backend).",
  "engines": {
    "node": "22"
  },
  "workspaces": [
    "docs",
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:server": "turbo run dev --filter=backend",
    "dev:client": "turbo run dev --filter=frontend",
    "build": "turbo run build",
    "start": "turbo run start",
    "docs": "npm run dev -w docs",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "-----server-----": "-----------------------------------------",
    "prismaProvider": "cd backend && npm run prismaProvider",
    "prismaInit": "cd backend && npm run prismaInit",
    "prismaReset": "cd backend && npx prisma migrate reset",
    "prismaMigrate": "cd backend && npx prisma migrate",
    "prismaMigrateOnli": "cd backend && npx prisma migrate --create-only",
    "prismaGenerate": "cd backend && npx prisma generate",
    "-----lib-----": "-----------------------------------------",
    "publicar": "cd lib && npm run publicar"
  },
  "dependencies": {},
  "devDependencies": {},
  "packageManager": "npm@10.9.4"
}